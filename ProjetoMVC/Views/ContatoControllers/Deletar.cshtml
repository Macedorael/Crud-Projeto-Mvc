@model ProjetoMVC.Models.Contato

@{
    ViewData["title"] = "Deletar";
}   

<h1>Deletar contato</h1>
<hr>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x=> x.Nome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x=> x.Telefone)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Telefone)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x=> x.Ativo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Ativo)
        </dt>
    </dl>
</div>

<form id="deletar" asp-action="Deletar">
    <input type="submit" value="Deletar" class="btn btn-danger">
</form>
<br>
<a asp-action="Index">Voltar</a>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#deletar").submit(function (e) {
                if (!confirm("Tem certeza de que deseja deletar este contato?")) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
